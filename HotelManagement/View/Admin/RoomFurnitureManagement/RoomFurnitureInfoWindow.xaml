<Window x:Class="HotelManagement.View.Admin.RoomFurnitureManagement.RoomFurnitureInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelManagement.View.Admin.RoomFurnitureManagement"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="RoomFurnitureInfoWD_MouseDown"
        Title="RoomFurnitureInfoWindow" Height="652" Width="432"
        Name="RoomFurnitureInfoWD"
        DataContext="{StaticResource RoomFurnitureManagementVM}"
        WindowStartupLocation="CenterScreen"
>
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="RoomFurnitureInfoWD"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0"
                                     To="1"
                                     Duration="0:0:0.3" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding FirstLoadInfoWindowCM}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid x:Name="AddMoreFurniture" Height="640" Width="420">
        <Rectangle VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Fill="White" RadiusX="5" RadiusY="5">
            <Rectangle.Effect>
                <DropShadowEffect
                    BlurRadius="6"
                    Color="Black"
                    Opacity="0.2"
                    ShadowDepth="4"
                    Direction="270"
                />
            </Rectangle.Effect>
        </Rectangle>
        <StackPanel Margin="0,10,0,0">
            <TextBlock Text="{Binding FurnituresRoomCache.RoomNumber}" Foreground="#009099" Margin="0 0 0 5" FontSize="38" FontWeight="Black" HorizontalAlignment="Center" FontFamily="{StaticResource MaterialDesignFont}"/>
            <Grid Margin="0 0 0 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Margin="10 0 0 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Grid.Row="0">
                        <Grid Width="70">
                            <TextBlock HorizontalAlignment="Right" Text="Loại phòng: " Foreground="#383838" FontSize="13" FontWeight="Bold" FontFamily="{StaticResource MaterialDesignFont}"></TextBlock>
                        </Grid>
                        <TextBlock Text="{Binding FurnituresRoomCache.RoomType}" Foreground="#383838" FontSize="13" FontWeight="Regular" FontFamily="{StaticResource MaterialDesignFont}"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="1">
                        <Grid Width="70">
                            <TextBlock HorizontalAlignment="Right" Text="Tình trạng: " Foreground="#383838" FontSize="13" FontWeight="Bold" FontFamily="{StaticResource MaterialDesignFont}"></TextBlock>
                        </Grid>
                        <TextBlock Text="{Binding FurnituresRoomCache.RoomStatus}" Foreground="#383838" FontSize="13" FontWeight="Regular" FontFamily="{StaticResource MaterialDesignFont}"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="2">
                        <Grid Width="70">
                            <TextBlock HorizontalAlignment="Right" Text="Mô tả: " Foreground="#383838" FontSize="13" FontWeight="Bold" FontFamily="{StaticResource MaterialDesignFont}"></TextBlock>
                        </Grid>
                        <ScrollViewer Name="scrollNote" Height="30" VerticalScrollBarVisibility="Visible"> 
                            <StackPanel x:Name="scrollCont" Width="120">
                                <TextBlock  Text="{Binding FurnituresRoomCache.Note}" TextWrapping="WrapWithOverflow" Foreground="#383838" FontSize="13" FontWeight="Regular" FontFamily="{StaticResource MaterialDesignFont}"></TextBlock>
                            </StackPanel>
                        </ScrollViewer>
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="2" Margin="0 0 10 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Grid.Row="0">
                        <Grid Width="70">
                            <TextBlock HorizontalAlignment="Right" Text="Tiện nghi: " Foreground="#383838" FontSize="13" FontWeight="Bold" FontFamily="{StaticResource MaterialDesignFont}"></TextBlock>
                        </Grid>
                        <StackPanel Width="120">
                            <TextBlock Text="{Binding FurnituresRoomCache.AllFurnitureString}" TextWrapping="WrapWithOverflow" Foreground="#383838" FontSize="13" FontWeight="Regular" FontFamily="{StaticResource MaterialDesignFont}"></TextBlock>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="1">
                        <Grid Width="70">
                            <TextBlock HorizontalAlignment="Right" Text="Số lượng: " Foreground="#383838" FontSize="13" FontWeight="Bold" FontFamily="{StaticResource MaterialDesignFont}"></TextBlock>
                        </Grid>
                        <TextBlock Text="{Binding FurnituresRoomCache.AllFurnitureQuantity}" Foreground="#383838" FontSize="13" FontWeight="Regular" FontFamily="{StaticResource MaterialDesignFont}"></TextBlock>
                    </StackPanel>
                </Grid>
            </Grid>
            <Rectangle Height="1" HorizontalAlignment="Stretch" Grid.ColumnSpan="3" Margin="10 0 10 10" Fill="Black" Opacity="0.25" VerticalAlignment="Bottom" />
            <Border Padding="0 0 0 5" Margin="10 0 10 10" Background="White" BorderThickness="0.3" BorderBrush="Black" CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="430"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <ScrollViewer Grid.Row="0" Height="430" VerticalScrollBarVisibility="Hidden" PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
                        <Grid Grid.Row="0" Name="List">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <ListBox ScrollViewer.CanContentScroll="False" Grid.Column="0" Name="ListRadio" Visibility="Collapsed" ScrollViewer.VerticalScrollBarVisibility="Hidden" 
                                        ItemsSource="{Binding FurnituresRoomCache.ListFurnitureRoom, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                        SelectedItem="{Binding SelectedFurniture, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:ListBoxItemAssist.ShowSelection="False"
                                        materialDesign:ListBoxAssist.IsToggle="False"
                                        Margin="0, 5, 0, 0"
                                    >
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="{x:Type ListBoxItem}">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Height" Value="98"/>
                                        <Setter Property="Margin" Value="5 0 0 8"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                    <ContentPresenter/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="IsSelected" Value="True"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="1" Margin="0,0,0,0" VerticalAlignment="Top"/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <CheckBox Loaded="CheckBox_Loaded" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" Style="{StaticResource MaterialDesignAccentCheckBox}" VerticalAlignment="Center" Grid.Column="0">
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="Checked">
                                                        <i:InvokeCommandAction Command="{Binding ElementName=ListRadio, Path=DataContext.ChooseItemToListNeedDelete}"/>
                                                    </i:EventTrigger>
                                                    <i:EventTrigger EventName="Unchecked">
                                                        <i:InvokeCommandAction Command="{Binding ElementName=ListRadio, Path=DataContext.RemoveItemToListNeedDelete}"/>
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </CheckBox>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <ListBox ScrollViewer.CanContentScroll="False" Grid.Column="1" ScrollViewer.VerticalScrollBarVisibility="Hidden" 
                                    ItemsSource="{Binding FurnituresRoomCache.ListFurnitureRoom, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                    x:Name="FurnitureStack"
                                    SelectedItem="{Binding SelectedFurniture, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    materialDesign:ListBoxItemAssist.ShowSelection="False"
                                    materialDesign:ListBoxAssist.IsToggle="False"
                                    Margin="0, 5, 0, 0"
                                >
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="{x:Type ListBoxItem}">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Height" Value="98"/>
                                        <Setter Property="Margin" Value="10,0,10,8"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                    <ContentPresenter/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="IsSelected" Value="True"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="1" Margin="0,0,0,0" VerticalAlignment="Top"/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Name="RoundBox" MouseDown="RoundBox_MouseDown" MouseUp="RoundBox_MouseUp" Cursor="Hand">
                                            <Border Grid.Column="1" Margin="0,5,0,0" BorderThickness="0.3" BorderBrush="Black" Background="White" CornerRadius="10" HorizontalAlignment="Stretch">
                                                <Border.Effect>
                                                    <DropShadowEffect
                                                        BlurRadius="6"
                                                        Direction="270"
                                                        Opacity="0.2"
                                                        Color="Black"
                                                        ShadowDepth="4"
                                                    />
                                                </Border.Effect>
                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Border Grid.Column="0" CornerRadius="10" Margin="5 0 0 0" Width="86" Height="86" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                                        <Border.Background>
                                                            <ImageBrush x:Name="ProductAvatar" Stretch="UniformToFill" ImageSource="{Binding FurnitureAvatar}"/>
                                                        </Border.Background>
                                                    </Border>
                                                    <Grid Grid.Column="1" Margin="20 0 20 0" HorizontalAlignment="Stretch">
                                                        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                                            <TextBlock
                                                                FontFamily="{StaticResource MaterialDesignFont}"
                                                                Foreground="#A8AE5C"
                                                                FontWeight="Bold"
                                                                FontSize="19" 
                                                                Height="29"
                                                                Padding="0 3 0 0"
                                                                Margin="0 0 20 0"
                                                                VerticalAlignment="Center" 
                                                                Text="{Binding FurnitureName}"
                                                            />
                                                            <TextBlock 
                                                                FontFamily="{StaticResource MaterialDesignFont}"
                                                                FontWeight="Regular"
                                                                FontSize="14"
                                                                Height="18"
                                                                Padding="0 1 0 0"
                                                                VerticalAlignment="Center"
                                                                Foreground="#7E6E6E"
                                                                Text="{Binding FurnitureType}"
                                                            />
                                                            <Grid  Margin="0 5 0 0">
                                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                                    <TextBlock 
                                                                        FontFamily="{StaticResource MaterialDesignFont}"
                                                                        FontWeight="Regular"
                                                                        FontSize="14"
                                                                        Height="18"
                                                                        Padding="0 1 0 0"
                                                                        VerticalAlignment="Center"
                                                                        Foreground="#7E6E6E"
                                                                        Text="Số lượng: "
                                                                    />
                                                                    <TextBlock 
                                                                        FontFamily="{StaticResource MaterialDesignFont}"
                                                                        FontWeight="Regular"
                                                                        FontSize="14"
                                                                        Height="18"
                                                                        Padding="0 1 0 0"
                                                                        VerticalAlignment="Center"
                                                                        Foreground="#7E6E6E"
                                                                        Text="{Binding InUseQuantity}"
                                                                    />
                                                                </StackPanel>
                                                            </Grid>
                                                        </StackPanel>
                                                    </Grid>
                                                    <Border Cursor="Hand" Width="20" Background="Transparent" Height="20" CornerRadius="20" Grid.ColumnSpan="2" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,15,10,0">
                                                    </Border>
                                                </Grid>
                                            </Border>
                                            <Rectangle Margin="0 5 0 0" RadiusX="10" RadiusY="10" Name="Mask" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Fill="Gray" Opacity="0"/>
                                            <Border x:Name="DeleteElement" Cursor="Hand" Width="20" Background="Transparent" Height="20" CornerRadius="20" Grid.ColumnSpan="2" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,20,10,0">
                                                <Border.InputBindings>
                                                    <MouseBinding Command="{Binding ElementName=FurnitureStack, Path=DataContext.DeleteItemInRoomFurnitureInfoCM}"
                                                                                    MouseAction="LeftClick" />
                                                </Border.InputBindings>
                                                <materialDesign:PackIcon Kind="Minimize" Width="20" Height="20"/>
                                            </Border>
                                            <StackPanel Name="DeleteCountBox" Visibility="Collapsed" Loaded="DeleteCountBox_Loaded" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 10 10" VerticalAlignment="Bottom">
                                                <materialDesign:PackIcon Kind="GarbageCan" VerticalAlignment="Center"/>
                                                <TextBox 
                                                    Name="TextCountBox"
                                                        FontFamily="{StaticResource MaterialDesignFont}"
                                                        FontWeight="Regular"
                                                        FontSize="16"
                                                        BorderBrush="Gray"
                                                        BorderThickness="0.5"
                                                        Grid.Column="1" VerticalAlignment="Center" Margin="5,0,0,0"
                                                        Text="{Binding DeleteInRoomQuantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        Width="30"
                                                        PreviewTextInput="TextCountBox_PreviewTextInput"
                                                    >
                                                    <TextBox.Style>
                                                        <Style TargetType="TextBox">
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="Wheat"></Setter>
                                                                </Trigger>
                                                                <Trigger Property="IsMouseOver" Value="False">
                                                                    <Setter Property="Background" Value="Transparent"></Setter>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBox.Style>
                                                </TextBox>
                                            </StackPanel>

                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </ScrollViewer>
                    <Border Name="TopDeleteControl" Visibility="Collapsed" HorizontalAlignment="Stretch" Margin="-0.4 -15 -0.4 0" BorderThickness="0.3 0.3 0.3 0" BorderBrush="Black" Grid.ColumnSpan="2" Background="White" CornerRadius="5 5 0 0" Height="30" VerticalAlignment="Top">
                        <Grid>
                            <Border MouseLeftButtonDown="PackIcon_MouseLeftButtonDown" Background="Transparent" Cursor="Hand" Width="20" Height="20" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="6 0 0 0">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseLeftButtonDown">
                                        <i:InvokeCommandAction Command="{Binding CloseDeleteControlCM}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <materialDesign:PackIcon  Kind="Close" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Center" />
                            </Border>
                            <TextBlock Text="Xóa" Cursor="Hand" Name="DeleteText" MouseLeftButtonDown="DeleteText_MouseLeftButtonDown" VerticalAlignment="Center" FontSize="14" HorizontalAlignment="Right" Margin="0 0 10 0" FontFamily="{StaticResource MaterialDesignFont}" FontWeight="Medium">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseLeftButtonDown">
                                        <i:InvokeCommandAction Command="{Binding DeleteListFurnitureCM}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </TextBlock>
                            <Rectangle Height="1" Fill="Black" Opacity="0.25" VerticalAlignment="Bottom"/>
                        </Grid>
                    </Border>
                    <Border Name="BottomDeleteControl" Margin="-0.4 0 -0.5 -15" BorderThickness="0.3" BorderBrush="Gray" Visibility="Collapsed" Grid.ColumnSpan="2" Background="White" CornerRadius="0 0 5 5" Height="30" VerticalAlignment="Bottom">
                        <Grid>
                            <TextBlock Text="Chọn tất cả" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown" VerticalAlignment="Center" Margin="10 1 0 0" FontSize="14" FontFamily="{StaticResource MaterialDesignFont}" FontWeight="Medium">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseLeftButtonDown">
                                        <i:InvokeCommandAction Command="{Binding ChooseAllFurnitureToDeleteCM}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </TextBlock>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
            <Grid Margin="40 5 40 0" VerticalAlignment="Bottom" HorizontalAlignment="Stretch">
                <Button Name="CloseButton" Command="{Binding CloseFurnitureRoomInfoCM}" CommandParameter="{Binding ElementName=RoomFurnitureInfoWD}" Cursor="Hand" HorizontalAlignment="Left" Margin="0 0 10 0" Width="120" Height="36" materialDesign:ButtonAssist.CornerRadius="5" Background="#EC4242">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="5" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.8"/>
                                </Trigger>
                                <Trigger Property="IsMouseCaptured" Value="True">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>

                    </Button.Style>

                    <TextBlock Text="Đóng cửa sổ" Foreground="White" FontSize="15" FontFamily="{StaticResource MaterialDesignFont}" FontWeight="Regular"></TextBlock>
                </Button>
                <Button Name="SaveButton2" Command="{Binding OpenImportFurnitureRoomCM}" CommandParameter="{Binding ElementName=RoomFurnitureInfoWD}" HorizontalAlignment="Right" Cursor="Hand" Width="120" Grid.Row="1" Height="36" materialDesign:ButtonAssist.CornerRadius="5" Background="{StaticResource PrimaryBackgroundColor}">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Width" Value="32"/>
                            <Setter Property="Height" Value="32"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="5" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.8"/>
                                </Trigger>
                                <Trigger Property="IsMouseCaptured" Value="True">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>

                    </Button.Style>
                    <TextBlock Text="Nhập tiện nghi" Foreground="White" FontSize="15" FontFamily="{StaticResource MaterialDesignFont}" FontWeight="Regular"></TextBlock>
                </Button>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
