                        <StackPanel Margin="20,40,0,0">
                            <RadioButton GroupName="RoomType" Background="#EC4242"
                                        x:Name="rdbRoomTypeA"
                                         Tag="RoomTypeA"
                                         Command="{Binding ChangeViewCM}"
                                         CommandParameter="{Binding ElementName=rdbRoomTypeA}">
                                <TextBlock Text="{Binding RoomTypeA}"
                                               FontFamily="{DynamicResource MaterialDesignFont}"
                                               FontSize="16"
                                               FontWeight="Regular"
                                               Margin="5,0,0,0">

                                </TextBlock>
                            </RadioButton>
                            <RadioButton GroupName="RoomType" Margin="0,10,0,0" Background="#EC4242"
                                          x:Name="rdbRoomTypeB"
                                         Tag="RoomTypeB"
                                         Command="{Binding ChangeViewCM}"
                                         CommandParameter="{Binding ElementName=rdbRoomTypeB}">
